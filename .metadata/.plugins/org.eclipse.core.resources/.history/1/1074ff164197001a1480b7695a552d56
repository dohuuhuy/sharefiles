package demo;

import java.io.IOException;
import java.net.URL;
import java.util.ResourceBundle;

import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.fxml.Initializable;
import javafx.scene.Parent;
import javafx.scene.layout.AnchorPane;
import javafx.scene.layout.BorderPane;

public class demoCtrl implements Initializable {

	@FXML
	private ResourceBundle resources;

	@FXML
	private URL location;

	@FXML
	private BorderPane bg;

	@FXML
	private AnchorPane content;

	@FXML
	void acA(ActionEvent event) {
		loadUI("a");
	}

	@FXML
	void acB(ActionEvent event) {
		loadUI("b");
	}

	@FXML
	void acC(ActionEvent event) {
		loadUI("c");
	}

	@FXML
	void acHome(ActionEvent event) {
		bg.setCenter(content);
	}

	private void loadUI(String page) {
		Parent root = null;
		try {
			root = FXMLLoader.load(getClass().getResource(page + ".fxml"));
		} catch (IOException e) {
			//Logger.getLogger(demoCtrl.class.getName()).log(Level.SEVERE, null, e);
		}
		bg.setCenter(root);
	}

	@Override
	public void initialize(URL arg0, ResourceBundle arg1) {

	}
}
