package Socket;

import java.io.File;
import java.net.URL;
import java.util.ResourceBundle;

import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.fxml.Initializable;
import javafx.scene.control.Button;
import javafx.scene.control.TextArea;
import javafx.scene.control.TextField;
import javafx.scene.layout.AnchorPane;
import javafx.stage.FileChooser;
import javafx.stage.Stage;

public class controllerServer implements Initializable {

	public SocketServer server;
	public Thread serverThread;
	public String filePath = "D:/Data.xml";

	@FXML
	public TextField txtDiaChi;

	@FXML
	public Button btnChonTep;

	@FXML
	public Button btnBatServer;

	@FXML
	public TextArea txtNoiDung;

	@FXML
	public Button btnKhoiDong;

	@FXML
	public AnchorPane anchorPane;

	// -----------------------//
	public boolean isWin32() {
		return System.getProperty("os.name").startsWith("Windows");
	}

	@FXML
	public void actionBatServer(ActionEvent event) {
		BatServer(event);
		

	}

	private void BatServer(ActionEvent event) {
		server = new SocketServer(this);
		//btnBatServer.setDisable(true);
	}

	@FXML
	public void actionChonTep(ActionEvent event) {

		FileChooser fileChooser = new FileChooser();
		Stage stage = (Stage) anchorPane.getScene().getWindow();
		File file = fileChooser.showOpenDialog(stage);

		if (file != null) {
			filePath = file.getAbsolutePath();
			filePath = filePath.replace("\\", "/");
			
			
		
		
		}	txtDiaChi.setText(filePath);
	}

	@FXML
	public void actionKhoiDong(ActionEvent event) {

	}

	public void RetryStart(int port) {
		if (server != null) {
			server.stop();
		}
		server = new SocketServer(this, port);
	}

	@Override
	public void initialize(URL location, ResourceBundle resources) {
		// TODO Auto-generated method stub

	}

}
